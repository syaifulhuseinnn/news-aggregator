{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"outDir": "./dist",
		"sourceMap": true,
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifier": true,
		"moduleTypes": {
			"**/*": "esm"
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}